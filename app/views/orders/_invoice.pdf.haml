!!! 5
%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8' }
    = stylesheet_link_tag 'invoice'

  %body
    .header
      %hr
      .ciw_header
        .img_container
          = image_tag('http://chicagoideas.com/assets/email/ciw_logo.png')
        %p
          %b Chicago Ideas Week
          %br/
          600 West Chicago
          %br/
          Suite 700
          %br/
          Chicago, IL 60654

      .ciw_header
        %p.with_border
          %b For Questions Contact:
          %br/
          %b Becky Asahic
          %br/
          Membership & Ticketing Manager
          %br/
          memberships@chicagoideas.com

    .clear
    .order_details Order Details

    .details_container
      %h1
        = @order.name_on_card

      .payment
        %h3 Order:
        \##{@order.code}

        %br/
        %h3 Date:
        = @order.created_at.to_date.strftime("%B %d, %Y")

        %br/
        %h3= @order.authnet_response.fields[:card_type]
        = @order.authnet_response.fields[:account_number]

        %br/
        %h3 Transaction Type:
        Purchase

    %h1.indented Transaction

    %table
      %tbody
        %tr
          %th.invoice
            Reference
          %th.invoice.product
            Product
          %th.invoice
            Price
        %tr
          %td.invoice
            \---
          %td.invoice
            = @order.member_type.title
          %td.invoice
            = number_to_currency(@order.total_in_cents/100)
        %tr
          %td.total_label{ colspan: 2 }
            %b Total Amount Paid
          %td.total_paid
            = number_to_currency(@order.total_in_cents/100)

    %h1.indented Billing Information

    %table
      %tbody
        %tr
          %th.invoice
            Address
        %tr
          %td.invoice
            = @order.name_on_card
            %br/
            = @order.billing_address.street_1
            - if @order.billing_address.street_2.present?
              %br/
              = @order.billing_address.street_2
            %br/
            #{ @order.billing_address.city }, #{ @order.billing_address.state } #{ @order.billing_address.zip }

    .clear
    .footer
      www.chicagoideas.com
