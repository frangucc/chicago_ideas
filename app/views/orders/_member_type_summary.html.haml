.membership_summary.member_type_summary.group
  = image_tag 'application/orders/member_type.png'
  .member_type_info
    %p.member_type_name
      = truncate member_type.title, :length => 27
      %span.member_type_price
        = member_type_price(member_type)
    %p.member_type_description
      = simple_format(truncate(member_type.description, :length => 150))
