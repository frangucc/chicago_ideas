= render 'member_controls'

- content_for :top_links do
  = edit_model_link @sponsor, true
  = destroy_model_link @sponsor, true

%h1
  = @sponsor.name
  = icon_link_to 'notes', notes_admin_sponsor_path(@sponsor), 'script'
  = new_model_link Note, @sponsor
  
#model_detail
  %h4 Name
  %p= @sponsor.name

  %h4 Description
  %p= @sponsor.description_html if @sponsor.description

  %h4 Sponsorship Level
  %p= @sponsor.sponsorship_level.name

  %h4 Eps Logo
  %p= image_tag @sponsor.eps_logo.url

  %h4 Logo
  %p= image_tag @sponsor.logo.url

  %h4 URL
  %p= link_to @sponsor.url

  - if @sponsor.logos_uploaded? && @sponsor.locked?
    %h4 Activate sponsor?
    %p= button_to 'Activate', activate_admin_sponsor_path(@sponsor)
