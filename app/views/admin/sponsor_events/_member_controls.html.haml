= content_for :breadcrumbs do
  = breadcrumbs @sponsor_event
  .crumb.end= section_title

- content_for :content_navigation do
  %h2 Sponsor Event
  %ul
    %li{ :class => active_for('index') }= icon_link_to 'Search', admin_sponsor_events_path, 'search'
  %h2= @sponsor_event.name
  %ul
    %li{ :class => active_for('show')  }= icon_link_to 'Detail', admin_sponsor_event_path(@sponsor_event),       'circle-zoomin'
    %li{ :class => active_for('notes') }= icon_link_to 'Notes',  notes_admin_sponsor_event_path(@sponsor_event), 'comment'
