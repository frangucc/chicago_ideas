!!! 5
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %title= page_title
    = stylesheet_link_tag :admin
    = stylesheet_link_tag 'admin_print', :media => "print"
    = javascript_include_tag :admin
    = csrf_meta_tag
 
  %body.admin{:id => body_id, :class => body_class}
  
    #header_container
      #header
        = link_to '', sponsor_root_path, :id => :logo

        #main_menu
          = link_to 'Start Here', sponsor_root_path, :class => active_for_controller('sponsor/start_here')
          = link_to 'Book Tickets', "", :class => active_for_controller('sponsor/tickets')
          = link_to 'Events Calendar', "", :class => active_for_controller('sponsor/event')

        
        #account_links
          = icon_link_to 'my account', "#", 'person', :icon_set => 'light'
          = icon_link_to 'sign out', destroy_user_session_path, 'extlink', :icon_set => 'light'
  
    #content_container
      #content_navigation
        = yield(:content_navigation)
        .clr
      #content
        #content_head
          #breadcrumbs
            = yield(:breadcrumbs)
            .clr
          #top_links
            = yield(:top_links)
            .clr
          .clr
        #page
          = yield
          .clr
      .clr
  
    #flash_helper= flash_helper  
  
    #dialog_loading{:style => "display:none"}= image_tag 'admin/loader.gif', :id => 'dialog_loading'
    #dialog{:style => "display:none"}
      .backdrop
      .dialog_position
        .dialog_container
          .dialog_contents
    
